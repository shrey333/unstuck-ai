# API Settings
API_VERSION="v1"
API_PREFIX="/api/${API_VERSION}"
DEBUG=false
PROJECT_NAME="Document Intelligence API"

# Security
SECRET_KEY="replace-with-secure-key-in-production"  # Generate with: openssl rand -hex 32
ALLOWED_HOSTS=["localhost", "127.0.0.1"]  # Comma-separated list in production

# Vector Store
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="your-pinecone-environment"  # e.g., "us-west1-gcp"
PINECONE_INDEX_NAME="documents"

EMBEDDING_MODEL="your-embedding-model"
CHAT_MODEL="your-chat-model"

# Cache
UPSTASH_REDIS_URL="https://your-instance.upstash.io"
UPSTASH_REDIS_TOKEN="your-upstash-redis-token"
CACHE_TTL=3600  # Cache TTL in seconds

# Google AI
GOOGLE_API_KEY="your-google-api-key"

# Storage
UPLOAD_DIR="uploads"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["pdf"]
